%fieldset.inputs
  %ol
    = form.input :request_id, :as => :hidden
    = form.input :name, :label => raw("Budget Item <i>(i.e. Personnel, Travel, Services)</i>")
    = form.input :amount_requested, :label => "Grant Amount Requested", :input_html => {:class => "budget-request-amount-requested"}
    - unless current_user.is_portal_user?
      = form.input :amount_recommended, :label => "Grant Amount Recommended", :input_html => {:class => "budget-request-amount-recommended"}
    = render :partial => "budget_requests/extra_budget_request_form", :locals => {:model => model, :form => form}
    = form.commit_button
